@page "/about"
@using MudBlazor

<PageTitle>About Comic Books Exchange</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
    <MudGrid>
        <MudItem xs="12">
            <MudPaper Elevation="3" Class="pa-6" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <MudText Typo="Typo.h3" GutterBottom="true" Class="font-weight-bold">
                    About Comic Books Exchange
                </MudText>
                <MudText Typo="Typo.subtitle1">
                    Connecting collectors and preserving comic book culture
                </MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-6">
                <MudText Typo="Typo.h5" GutterBottom="true">Our Mission</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Comic Books Exchange is dedicated to connecting passionate collectors in Skåne, Sweden. We believe that comic books are not just collectibles—they're works of art, cultural treasures, and sources of joy that should be shared within our local community.
                </MudText>
                <MudText Typo="Typo.body2">
                    Our platform provides a safe, secure, and transparent way for collectors to lend their comics through local meetups, building lasting friendships and discovering the books that complete their collections.
                </MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-6">
                <MudText Typo="Typo.h5" GutterBottom="true">Our Values</MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                        <strong>Community</strong> - Building local connections between collectors
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                        <strong>Trust</strong> - Face-to-face meetups create lasting relationships
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                        <strong>Safety</strong> - Public meetups in well-known locations
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                        <strong>Sustainability</strong> - No shipping, lower environmental impact
                    </MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>

        <MudItem xs="12">
            <MudPaper Elevation="2" Class="pa-6">
                <MudText Typo="Typo.h5" GutterBottom="true">How We Started</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Comic Books Exchange was founded by a group of passionate collectors in Malmö who wanted to share their comics with fellow enthusiasts in Skåne. We recognized that while digital platforms exist, nothing beats the experience of meeting fellow collectors face-to-face, sharing stories, and building a real community.
                </MudText>
                <MudText Typo="Typo.body2">
                    We built this platform from the ground up with local collectors in mind, focusing on safe meetup practices and fostering genuine connections between comic book enthusiasts across Malmö, Lund, Helsingborg, and throughout Skåne.
                </MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12">
