@page "/guide"
@using MudBlazor

<PageTitle>How It Works - Comic Books Lending Library</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
    <MudGrid>
        <MudItem xs="12">
            <MudPaper Elevation="3" Class="pa-6"
                Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <MudText Typo="Typo.h3" GutterBottom="true" Class="font-weight-bold">
                    How Comic Lending Works
                </MudText>
                <MudText Typo="Typo.subtitle1">
                    Borrow comics for free by offering one of yours in return. Both comics are loaned for the same
                    period and returned to their owners.
                </MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12">
            <MudPaper Elevation="2" Class="pa-6" Style="background: #fff3e0;">
                <MudText Typo="Typo.h5" GutterBottom="true">
                    <MudIcon Icon="@Icons.Material.Filled.Lightbulb" Class="mr-2" />
                    The Core Concept
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    Unlike traditional marketplaces where you buy or permanently trade comics, our lending library
                    allows you to <strong>borrow</strong> comics temporarily.
                    The catch? You must offer one of your own comics in return for the loan period.
                </MudText>
                <MudGrid>
                    <MudItem xs="12" sm="4">
                        <MudCard>
                            <MudCardContent>
                                <MudIcon Icon="@Icons.Material.Filled.SwapHoriz"
                                    Style="font-size: 3rem; color: #667eea;" />
                                <MudText Typo="Typo.h6" Class="mt-2">Mutual Lending</MudText>
                                <MudText Typo="Typo.body2">Both parties lend and borrow at the same time</MudText>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                    <MudItem xs="12" sm="4">
                        <MudCard>
                            <MudCardContent>
                                <MudIcon Icon="@Icons.Material.Filled.Schedule"
                                    Style="font-size: 3rem; color: #764ba2;" />
                                <MudText Typo="Typo.h6" Class="mt-2">Timed Loans</MudText>
                                <MudText Typo="Typo.body2">Choose loan periods from 7 to 90 days</MudText>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                    <MudItem xs="12" sm="4">
                        <MudCard>
                            <MudCardContent>
                                <MudIcon Icon="@Icons.Material.Filled.Undo" Style="font-size: 3rem; color: #f093fb;" />
                                <MudText Typo="Typo.h6" Class="mt-2">Return & Repeat</MudText>
                                <MudText Typo="Typo.body2">Comics are returned, then available for new loans</MudText>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="3">
            <MudNavMenu>
                <MudNavLink Href="#step1">Step 1: Create Profile</MudNavLink>
                <MudNavLink Href="#step2">Step 2: List Comics</MudNavLink>
                <MudNavLink Href="#step3">Step 3: Browse Comics</MudNavLink>
                <MudNavLink Href="#step4">Step 4: Request Loan</MudNavLink>
                <MudNavLink Href="#step5">Step 5: Ship Comics</MudNavLink>
                <MudNavLink Href="#step6">Step 6: Enjoy & Return</MudNavLink>
            </MudNavMenu>
        </MudItem>

        <MudItem xs="12" md="9">
            <MudPaper Elevation="2" Class="pa-6" id="step1">
                <MudText Typo="Typo.h5" GutterBottom="true">Step 1: Create Your Profile</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Start by creating an account and setting up your member profile. This helps other members
                    understand your reading interests and preferences.
                </MudText>
                <MudText Typo="Typo.subtitle2" GutterBottom="true">What to include:</MudText>
                <MudList T="string">
                    <MudListItem T="string">Your reading focus (era, publisher, characters)</MudListItem>
                    <MudListItem T="string">Preferred shipping method (mail, local pickup)</MudListItem>
                    <MudListItem T="string">A brief biography about yourself</MudListItem>
                    <MudListItem T="string">Your location for local loan opportunities</MudListItem>
                </MudList>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-6 mt-4" id="step2">
                <MudText Typo="Typo.h5" GutterBottom="true">Step 2: List Your Comics</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Add the comics you're willing to loan to your collection. Be detailed and honest about condition.
                </MudText>
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    <strong>Important:</strong> You need comics in your collection to be able to borrow from others!
                </MudAlert>
                <MudText Typo="Typo.subtitle2" GutterBottom="true">Important details:</MudText>
                <MudList T="string">
                    <MudListItem T="string">Accurate condition grading (check grading guides)</MudListItem>
                    <MudListItem T="string">Realistic estimated value</MudListItem>
                    <MudListItem T="string">Professional grading information if applicable</MudListItem>
                    <MudListItem T="string">Clear photos or cover image links</MudListItem>
                </MudList>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-6 mt-4" id="step3">
                <MudText Typo="Typo.h5" GutterBottom="true">Step 3: Browse Available Comics</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Use our search and filter tools to find comics you'd like to borrow. Look for the green "Available
                    for Loan" badge.
                </MudText>
                <MudAlert Severity="Severity.Warning" Class="mb-4">
                    Comics marked "Currently on Loan" are unavailable until they're returned.
                </MudAlert>
                <MudText Typo="Typo.subtitle2" GutterBottom="true">Pro tips:</MudText>
                <MudList T="string">
                    <MudListItem T="string">Filter by era, condition, and publisher</MudListItem>
                    <MudListItem T="string">Check member ratings before requesting</MudListItem>
                    <MudListItem T="string">Look for comics with similar value to yours</MudListItem>
                    <MudListItem T="string">Message members with questions before requesting</MudListItem>
                </MudList>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-6 mt-4" id="step4">
                <MudText Typo="Typo.h5" GutterBottom="true">Step 4: Request a Loan</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    When you find a comic you want to borrow, request a loan by selecting which of your comics you'll
                    offer in return.
                </MudText>
                <MudText Typo="Typo.subtitle2" GutterBottom="true">Your request should include:</MudText>
                <MudList T="string">
                    <MudListItem T="string">The comic you want to borrow</MudListItem>
                    <MudListItem T="string">The comic you're offering in return</MudListItem>
                    <MudListItem T="string">Desired loan duration (7-90 days)</MudListItem>
                    <MudListItem T="string">A friendly message explaining why you want to read it</MudListItem>
                </MudList>
                <MudAlert Severity="Severity.Info" Class="mt-4">
                    <strong>Tip:</strong> Offering a comic of similar value increases your chances of acceptance!
                </MudAlert>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-6 mt-4" id="step5">
                <MudText Typo="Typo.h5" GutterBottom="true">Step 5: Ship Your Comics</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Once a loan request is accepted, both parties ship their comics to each other.
                </MudText>
                <MudText Typo="Typo.subtitle2" GutterBottom="true">Shipping best practices:</MudText>
                <MudList T="string">
                    <MudListItem T="string">Use tracked shipping with insurance</MudListItem>
                    <MudListItem T="string">Pack comics securely with acid-free materials</MudListItem>
                    <MudListItem T="string">Take photos before shipping for documentation</MudListItem>
                    <MudListItem T="string">Share tracking numbers through the platform</MudListItem>
                    <MudListItem T="string">Confirm receipt immediately when you receive</MudListItem>
                </MudList>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-6 mt-4" id="step6">
                <MudText Typo="Typo.h5" GutterBottom="true">Step 6: Enjoy & Return</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Read and enjoy the borrowed comic! When the loan period ends, ship the comics back to their original
                    owners.
                </MudText>
                <MudAlert Severity="Severity.Warning" Class="mb-4">
                    <strong>Remember:</strong> Both comics must be returned in the same condition. Late returns affect
                    your rating!
                </MudAlert>
                <MudText Typo="Typo.subtitle2" GutterBottom="true">Return process:</MudText>
                <MudList T="string">
                    <MudListItem T="string">Handle comics with clean hands</MudListItem>
                    <MudListItem T="string">Store properly during the loan period</MudListItem>
                    <MudListItem T="string">Ship back before the due date</MudListItem>
                    <MudListItem T="string">Confirm return receipt</MudListItem>
                    <MudListItem T="string">Leave a review for your lending partner</MudListItem>
                </MudList>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-6 mt-4" Style="background: #e8f5e9;">
                <MudText Typo="Typo.h5" GutterBottom="true">
                    <MudIcon Icon="@Icons.Material.Filled.Security" Class="mr-2" />
                    Safety & Best Practices
                </MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Always use tracked, insured shipping
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Document condition with photos before
                        sending</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Keep all communication on the platform
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Check user ratings and reviews
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Start with shorter loan periods for new
                        connections</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Report any issues immediately
                    </MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>